{
  "name": "react-ghosta",
  "version": "1.0.9",
  "type": "module",
  "description": "React popup alerts. Lightweight, customizable and beautiful by default.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && rollup -c",
    "build/publish": "npm run build && npm publish",
    "size": "size-limit",
    "prettier": "prettier src --write"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "alert",
    "popup",
    "modal",
    "ghosta"
  ],
  "author": "Firuzcan HacÄ±yev",
  "repository": "https://github.com/eleviven/react-ghosta",
  "bugs": "https://github.com/eleviven/react-ghosta/issues",
  "license": "MIT",
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "30 KB"
    },
    {
      "path": "dist/index.es.js",
      "limit": "30 KB"
    }
  ],
  "dependencies": {
    "@headlessui/react": "^1.7.18",
    "class-variance-authority": "^0.7.0"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@size-limit/preset-small-lib": "^11.0.2",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/rollup-plugin-peer-deps-external": "^2.2.4",
    "husky": "^9.0.10",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^4.10.0",
    "rollup-plugin-import-css": "^3.4.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-ts": "^3.4.5",
    "size-limit": "^11.0.2",
    "typescript": "^5.3.3"
  }
}
